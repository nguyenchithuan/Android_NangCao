<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin sản phẩm"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#F44336"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/tv_ma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Mã sp:"
            android:textColor="#FF5722"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sp:"
            android:textColor="#FF5722"
            android:textSize="18dp"
            android:padding="3dp"
            />

        <TextView
            android:id="@+id/tv_loai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã loại"
            android:textColor="#FF5722"
            android:textSize="18dp"
            android:padding="3dp"
            />

        <TextView
            android:id="@+id/tv_soLuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng nhập"
            android:textColor="#FF5722"
            android:textSize="18dp"
            android:padding="3dp"
            />

        <TextView
            android:id="@+id/tv_ngayNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày nhập:"
            android:textColor="#FF5722"
            android:textSize="18dp"
            android:padding="3dp"
            />

        <TextView
            android:id="@+id/tv_dgNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn giá nhập:"
            android:textColor="#FF5722"
            android:textSize="18dp"
            android:padding="3dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>